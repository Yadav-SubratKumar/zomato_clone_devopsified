pipeline {
    agent any 

    tools {
        nodejs 'nodejs18'
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }
    stages {
        stage('Git Checkout'){
            steps {
                git branch: 'main', url: 'https://github.com/Yadav-SubratKumar/zomato_clone_devopsified'
            }
        }

        stage('Code Compilation') {
            steps {
                dir('.'){
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }
        stage('GitLeaks Scan') {
            steps {
                sh 'gitleaks detect --source . --exit-code 1'

            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=NodeJS-Project \
                            -Dsonar.projectKey=NodeJS-Project '''
                }
            }
        }
        stage('Quality Gate Check') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }
        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs --format table -o fs-report.html .'
            }
        }

        stage('Build-Tag & Push Backend Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred') {
                        dir('.') {
                            sh 'docker build -t subratdevops/zomato:latest .'
                            sh 'trivy image --format table -o zomato-image-report.html subratdevops/zomato:latest '
                            sh 'docker push subratdevops/zomato:latest'  
                        }
                    }
                }
            }
        }

        stage('Update K8s Deployment Image') {
            steps {
                script {

                    def newTag = "subratdevops/zomato:${BUILD_NUMBER}"

                    sh """
                        sed -i 's|subratdevops/zomato:.*|${newTag}|g' k8s-prod/deployment.yaml
                    """

                    sh """
                        git config user.email "jenkins@ci.com"
                        git config user.name "Jenkins CI"
                        git add k8s-prod/deployment.yaml
                        git commit -m "Update image tag to ${newTag} [Jenkins Build ${BUILD_NUMBER}]"
                        git push origin main
                    """
                }
            }
        }

          
    }
}